{
  "manifest_version": 2,
  "short_name": "AletheoWallet",
  "name": "Aletheo Wallet",
  "description": "Addon that allows you to get paid for posting on the internet",
  "version": "0.2.0.2",
  "author": "Sam Porter",
  "permissions": [
    "clipboardWrite",
    "storage",
    "http://oracle.aletheo.net/*"
  ],
  "icons": {
    "32": "theme/icons/let32.png",
    "48": "theme/icons/let48.png",
    "64": "theme/icons/let64.png"
  },
  "background": {
    "scripts": [
      "common/ethers.umd.min.js",
      "common/browser-polyfill.min.js",
      "background/ethersEventHandler.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "common/browser-polyfill.min.js",
        "content/collectFormData.js"
      ],
      "matches": [
        "*://boards.4channel.org/biz/*",
        "*://boards.4channel.org/qa/*",
        "*://4chan.org/biz/*",
        "*://4chan.org/qa/*",
        "*://2ch.hk/cc/*",
        "*://2ch.pm/cc/*"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "browser_action": {
    "browser_style": false,
    "default_title": "ALETHEO WALLET",
    "default_popup": "popup/popup.html"
  }
}
